{
  "name": "akario-mart",
  "version": "1.0.0",
  "description": "A full-featured e-commerce platform",
  "main": "index.js",
  "scripts": {
    "dev": "node start-dev.js",
    "dev:backend": "cd server && npm run dev",
    "dev:frontend": "cd client && npm run dev",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "build": "npm run build --prefix client",
    "build:frontend": "npm run build --prefix client",
    "build:backend": "echo \"Backend does not require build step\"",
    "build:all": "npm run build:frontend",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd server && npm start",
    "start:frontend": "cd client && npm run preview",
    "deploy": "node deploy.js"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.546.0",
    "mongoose": "^8.19.1",
    "recharts": "^3.3.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "vite": "^7.1.10"
  }
}
